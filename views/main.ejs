  <body>
    <div class= "main">

      <!-- Page One -->
      <section id="1">
        <!-- Sliders -->
        <div id="cardslider" >
          <div class="swiper-container" > 
            <div class="swiper-wrapper" > 
              <% for(var i =1; i<7; i++) { %>
              <div class="swiper-slide">
                <img src="./images/post<%= i %>.png">
