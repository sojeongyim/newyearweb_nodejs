    <script>

$(document).ready(function(){
  $(".main").onepage_scroll({
    loop: false,
    afterMove: function(index) {
    },
  });

  $('#file-input').change(function() {
    $('#target').submit();
  });

  $('button.tag').click(function(){
    var id = $(this).attr('id');
    $('button.tag').removeClass("active");
    $(this).addClass("active");
    var letters ="<%= tagList %>";
    var tagList = letters.split(',')
      //first Letter is tagList[id][1];
      //second Letter is tagList[id][2];
      $('h4#first_letter').text(tagList[id][1]);
    $('h4#second_letter').text(tagList[id][2]);
  });
});

var http = new XMLHttpRequest();
while(http.status==404){
  setTimeout(function(){ 
    http.open('HEAD',"/images/Result/<%=uploadfile%>", false);
    http.send();
    console.log(http.status!=404); 
  },5000);

}

var swiper = new Swiper('.swiper-container', { 
  slidesPerView: 3, 
  spaceBetween: 30, 
  freeMode: true, 
  pagination: { 
    el: '.swiper-pagination', 
    clickable: true, 
  }, 
});

    </script> 
