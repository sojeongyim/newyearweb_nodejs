<!DOCTYPE html>
<html lang="ko">
  <head>		
    <% include header %>
    <title>Paintly.AIcard.main</title>
  </head>

  <body id=background>
    <div id="index_container">
      <div>
        <div id="idx1">
        <div id="backgroundMent">
          <img id="idx1_ment" src="./images/Asset1.png">
        </div>

      </div>
        <center>
          <img id="resultImg" style="max-width: 1000px; width: 100%; height: auto;" src="/final/<%= filename %>"/>  
        </center>
      </div>
      <div id="resultBottom" style="">
        <img class="down" onclick="DownloadCard()" style=" "src="/images/download2.png"/> 
        <img class="start" onclick="location.href='/'" style=" "src="/images/next2.png"/> 
      </div>
    </div>
  </body>

  <script>

function DownloadCard(){
  console.log("asdfasdf");
  var link = document.createElement('a');
  var filename = '<%= filename %>';  
  var uagent = navigator.userAgent.toLowerCase();
  link.href = "/final/"+filename;
  link.download = filename;
  link.click();

  if (uagent.search("iphone") > -1){
    window.location.href="/main/final/"+filename;
  }
}
  </script>

</html>
