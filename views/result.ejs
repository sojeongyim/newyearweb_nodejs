<!DOCTYPE html>
<html lang="ko">
  <head>		
    <% include header %>
    <title>Paintly.AIcard.main</title>
  </head>

  <body id=background>
    <div id="index_container">
      <div>
        <h1 id="backgroundMent">설날 폴라로이드 만들기</h1>
        <center>
          <img style="width: 100%; height: 100%;" src="/final/<%= filename %>"/>  
        </center>
      </div>
      <div id="resultBottom" style="">
        <img onclick="DownloadCard()" style=" "src="/images/download.png"/> 
        <div>
          <a href="/main">설날 폴라로이드 만들기</a>
        </div>
      </div>
    </div>
  </body>

  <script>

function DownloadCard(){
  console.log("asdfasdf");
  var link = document.createElement('a');
  var filename = '<%= filename %>';  
  var uagent = navigator.userAgent.toLowerCase();

  link.href = "/final/"+filename;
  link.download = filename;
  link.click();
  if (uagent.search("iphone") > -1){
    window.location.href="/final/"+filename;
  }
}
  </script>

</html>
