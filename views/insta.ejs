      </div>
      <div class="reactUI step4" id="uploadPhoto" style="display: none;">
        카드를 공유하세요!
      </div>

      <!-- Polaroid -->
      <center id="card_style"> 
        <div id="capture_card" style="width:100%; height:100%; position: relative; text-align: center;">
          <div id = "progressBar">
            <div class="loader"></div>
          </div>
          <div id = "insta_inImgTop1">
            <p id="insta_p1" style="color: white;font-family: nanum Gothic;
    font-weight: bold;"> </p>
          </div>
          <div id = "insta_inImgTop2">
            <p id="insta_p2" style="color: white;font-family: nanum Gothic;
    font-weight: bold;"> </p>
          </div>
          <input class="reactUI step3" id="insta_txt1" autofocus placeholder="22자 이내로 입력" maxlength="22" style="display: none;letter-spacing:-1px"> 
          </input>
          <input class="reactUI step3" id="insta_txt2" autofocus placeholder="22자 이내로 입력" maxlength="22" style="display: none;letter-spacing:-1px"> 
